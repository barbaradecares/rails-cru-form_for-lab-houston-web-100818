<%= form_for song do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br /><br //>
  <%= f.label :genre %>
  <%= f.text_area :genre %>
  <br />
  <%= f.label :artist%>
  <%= f.text_field :artist_id%>
  <datalist id="artist_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <br />
  <%= f.label :genre%>
  <%= f.text_field :genre_id%>
  <datalist id="genre_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>

<%=f.submit%>
<% end %>
